        ScanBtn matlab.ui.control.Button
        IdentifyBtn matlab.ui.control.Button
        ViewDatabaseBtn matlab.ui.control.Button
        ScanImageAxes matlab.ui.control.UIAxes
        FoundImageAxes matlab.ui.control.UIAxes
