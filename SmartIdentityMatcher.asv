        end
        function ScanBtnPushed(app, ~)
            app.scanIdentity();
        end
        function IdentifyBtnPushed(app, ~)
            app.performIdentification();
        end
        function ViewDatabaseBtnPushed(app, ~)
            app.viewDatabase();
        end
    end

